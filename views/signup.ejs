<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">

    <div class="w-full max-w-md bg-gradient-custom rounded-3xl shadow-lg p-8 text-white">

        <div class="text-center mb-8">
            <h1 class="text-3xl font-semibold">Create Account</h1>
            <p class="text-xl">Join us today!</p>
        </div>

        <form action="/user/signup/" method="POST" class="space-y-6">

            <div>
                <input name="username" type="text" placeholder="Username"
                    class="w-full px-4 py-3 bg-[#f1f5f9] border border-gray-300 rounded-xl placeholder-gray-500 text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#d97706]"
                    required />
            </div>

            <div>
                <input name="email" type="email" placeholder="Email Address"
                    class="w-full px-4 py-3 bg-[#f1f5f9] border border-gray-300 rounded-xl placeholder-gray-500 text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#d97706]"
                    required />
            </div>

            <div class="relative">
                <input name="password" type="password" placeholder="Password"
                    class="w-full px-4 py-3 bg-[#f1f5f9] border border-gray-300 rounded-xl placeholder-gray-500 text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#d97706]"
                    required />
                <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center">
                    <span class="material-icons text-gray-800">visibility</span>
                </button>
            </div>

            <!-- New checkbox field to ask if user wants to provide services -->
            <div class="flex items-center space-x-3">
                <input name="provides_service" type="checkbox" id="provides_service"
                    class="h-5 w-5 text-[#d97706] border-gray-300 rounded focus:ring-[#d97706]" />
                <label for="provides_service" class="text-white">Do you want to offer your services?</label>
            </div>

            <button type="submit"
                class="w-full bg-[#d97706] text-white font-bold py-3 rounded-xl shadow-md hover:bg-amber-700 transition duration-300">
                Sign Up
            </button>
        </form>

        <div class="mt-8 text-center">
            <p class="text-sm text-white">
                Already have an account?
                <a href="/user/login/" class="font-bold hover:underline">Login Here</a>
            </p>
        </div>
    </div>
</body>
