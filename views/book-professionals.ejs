    </header> 

    <!-- Dashboard Main Content -->
    <main class="dashboard">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <h1>Find the Perfect Professional</h1>
                <p>Browse through our talented community and book the perfect professional for your needs.</p>
                
                <div class="search-filters">
                    <div class="search-box">
                        <input type="text" placeholder="Search by skill, name, or location..." />
                        <button class="btn-primary"><i class="fas fa-search"></i> Search</button>
                    </div>
                    
                    <div class="filters">
                        <div class="filter-group">
                            <label>Category</label>
                            <select>
                                <option value="">All Categories</option>
                                <option value="dance">Dance</option>
                                <option value="music">Music</option>
                                <option value="art">Art</option>
                                <option value="design">Design</option>
                                <option value="photography">Photography</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label>Location</label>
                            <select>
                                <option value="">Any Location</option>
                                <option value="ludhiana">Ludhiana</option>
                                <option value="delhi">Delhi</option>
                                <option value="mumbai">Mumbai</option>
                                <option value="bangalore">Bangalore</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label>Budget</label>
                            <select>
                                <option value="">Any Budget</option>
                                <option value="low">₹1,000 - ₹5,000</option>
                                <option value="medium">₹5,000 - ₹15,000</option>
                                <option value="high">₹15,000+</option>
                            </select>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Professionals Section -->
           <section class="professionals-section">
    <h2>Available Professionals</h2>
    <div class="professionals-grid">
        <% if (locals.professionals && professionals.length > 0) { %>
            <% professionals.forEach(function(professional) { %>
                <div class="professional-card">
                    <div class="card-image">
                        <img src="<%= professional.profileImage %>" alt="<%= professional.profession %>" />
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <span><%= professional.rating || '4.8' %></span>
                        </div>
                    </div>
                    <div class="card-content">
                        <h3><%= professional.username %></h3>
                        <p class="location"><i class="fas fa-map-marker-alt"></i> <%= professional.location %></p>
                        <p class="profession"><%= professional.profession %></p>
                        <p class="price">Starting from ₹<%= professional.price %>/event</p>
                        <div class="skills">
                            <% professional.services.forEach(function(service) { %>
                                <span><%= service %></span>
                            <% }) %>
                        </div>
                        <div class="card-actions">
                            <button class="btn-outline"><i class="far fa-heart"></i> Save</button>
                            <a href="/user/<%= professional._id %>" class="btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
